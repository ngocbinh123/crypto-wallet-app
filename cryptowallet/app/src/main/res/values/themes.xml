<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.Crypto" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/primaryColor</item>
		<item name="colorPrimaryVariant">@color/primaryDarkColor</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/secondColor</item>
		<item name="colorSecondaryVariant">@color/secondDarkColor</item>
		<item name="colorOnSecondary">@color/white</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
		<item name="android:windowBackground">@drawable/splash</item>
	</style>

	<style name="Theme.Crypto.NoActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.Crypto.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="Theme.Crypto.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="Theme.Crypto.TextView">
		<item name="android:textSize">@dimen/textXM</item>
		<item name="android:textColor">@color/black</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="Theme.Crypto.TextView.H6">
		<item name="android:textSize">@dimen/textMLL</item>
	</style>

	<style name="Theme.Crypto.TextView.SubTitle1">
		<item name="android:textSize">@dimen/textM</item>
		<item name="android:textColor">@color/grayText</item>
	</style>


	<style name="Theme.Crypto.TextView.Price">
		<item name="android:textSize">@dimen/textMLL</item>
		<item name="android:textColor">@color/primaryDarkColor</item>
	</style>

	<style name="Theme.Crypto.TextView.Label">
		<item name="android:textColor">@color/grayText</item>
	</style>
</resources>